{
    "version": "0.0.1",
  "name": "brainbug",
  "displayName": "brainbug",
  "publisher": "bhuvnesh",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Send save",
      "properties": {
        "codeSendOnSave.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable sending file contents to the configured backend on save."
        },
        "codeSendOnSave.endpoint": {
          "type": "string",
          "default": "http://localhost:8000/api/analyze",
          "description": "Backend endpoint to receive saved files (POST)."
        },
        "codeSendOnSave.apiKey": {
          "type": "string",
          "default": "",
          "description": "Optional API key to include in the Authorization header."
        },
        "codeSendOnSave.debounceMs": {
          "type": "number",
          "default": 300,
          "description": "Debounce time (ms) to coalesce rapid saves."
        },
        "codeSendOnSave.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "description": "Glob patterns to exclude from sending."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.106.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "minimatch": "^5.1.6",
    "node-fetch": "^2.7.0"
  }
}
